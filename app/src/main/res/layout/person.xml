<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="384dp"
            android:layout_height="70dp"
            android:id="@+id/personView" android:textSize="25sp"
            android:textAlignment="center" android:gravity="center"
            tools:layout_editor_absoluteY="158dp" tools:layout_editor_absoluteX="16dp"/>
    <EditText
            android:layout_width="288dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name"
            android:hint="Name"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/personView" app:layout_constraintHorizontal_bias="0.476"/>
    <EditText
            android:layout_width="293dp"
            android:layout_height="53dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/age"
            android:hint="Age"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/name"/>
    <EditText
            android:layout_width="288dp"
            android:layout_height="56dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/gender"
            android:hint="Gender"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/age" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.457"/>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/savebtn" android:onClick="personInfo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gender"/>
</android.support.constraint.ConstraintLayout>